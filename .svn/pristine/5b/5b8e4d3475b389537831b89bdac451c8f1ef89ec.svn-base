package ch1;

class Fibonacci {
	// final: immutable variable (can never had its value changed)
	// String is an immutable object
	// static: the variable isn't associated with each instance, but with the class
	static final int MAX = 1;
	/** Print the Fibonacci sequence for values < MAX */
	public static void runFibonacci() {
		int lo = 1;
		int hi = 1;
		System.out.println("Using DO-WHILE:");
		System.out.println(lo);
		// do-while: always executes at least once
		do{
			System.out.println(hi);
			hi = lo + hi;
			lo = hi - lo;
		}
		while (hi < MAX);
		
		lo = 1;
		hi = 1;
		System.out.println("Using WHILE:");
		System.out.println(lo);
		while (hi < MAX){
			System.out.println(hi);
			hi = lo + hi;
			lo = hi - lo;
		}
		
	}
}

public class Size_of_Primitive_Types {

	public static void size_of_primitive_types(){
		System.out.println("Size of primitive types (in bits)...");
		System.out.println("Byte: " + Byte.SIZE);
		System.out.println("Short: " + Short.SIZE);
		System.out.println("Integer: " + Integer.SIZE);
		System.out.println("Long: " + Long.SIZE);
		System.out.println("Float: " + Float.SIZE);
		System.out.println("Double: " + Double.SIZE);
		System.out.println("Character: " + Character.SIZE);
		System.out.println("Boolean: undetermined");
	}

	public static void main(String arguments[]){
		//SizeOfPrimitiveTypes.size_of_primitive_types();
		Fibonacci.runFibonacci();
	}
}
